<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".Walkthough3">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:lottie_rawRes="@raw/helping_people"
        app:lottie_autoPlay="true"
        android:layout_marginBottom="20dp"
        android:background="@color/offWhite"
        app:lottie_loop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="1"
            android:background="@drawable/walkthough_shape"
            android:gravity="center"
            />


        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginHorizontal="10dp"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="2"
            android:background="@drawable/walkthough_shape"
            android:gravity="center"
            />


        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginHorizontal="10dp"
            />


        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="3"
            android:background="@drawable/walkthough_shape"
            android:backgroundTint="@color/paypalColor"
            android:gravity="center"
            />




    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/helping_text"
        android:textColor="@color/textColor"
        android:fontFamily="@font/font_family"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginVertical="40dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:textColor="@color/textColor"
            android:id="@+id/skipWalkThough3"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_arrow_forward_ios_24"
            android:layout_alignParentEnd="true"
            android:background="@drawable/walkthough_shape"
            android:padding="10dp"
            android:backgroundTint="@color/orangeDark"
            app:tint="@color/black"
            android:id="@+id/nextWalkThough3"
            />



    </RelativeLayout>



</LinearLayout>